{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install && pnpm run build",
    "watchPatterns": ["packages/api/**", "packages/shared/**", "packages/integrations/**"]
  },
  "deploy": {
    "startCommand": "pnpm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
