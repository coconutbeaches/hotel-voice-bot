{
  "name": "hotel-voice-bot",
  "version": "1.0.0",
  "description": "AI-powered hotel voice bot with WhatsApp integration",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter @hotel-voice-bot/shared run build && pnpm --filter @hotel-voice-bot/integrations run build && pnpm --filter @hotel-voice-bot/api run build",
    "build:npm": "./build.sh",
    "dev": "pnpm -r run dev",
    "start": "cd packages/api && pnpm start",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "lint:md": "markdownlint-cli2 **/*.md",
    "lint:md:fix": "markdownlint-cli2 --fix **/*.md",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm -r run clean",
    "typecheck": "pnpm -r run typecheck",
    "docs:touch": "tsx scripts/update-doc-timestamps.ts",
    "prepare": "command -v husky >/dev/null && husky install || echo 'Husky not found, skipping'"
  },
  "keywords": [
    "hotel",
    "voice-bot",
    "whatsapp",
    "ai",
    "openai"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/glob": "^9.0.0",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "glob": "^11.0.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "markdownlint-cli": "^0.45.0",
    "markdownlint-cli2": "^0.18.1",
    "markdownlint-rule-relative-links": "^4.2.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "file-type": "^21.0.0",
    "openai": "4.104.0",
    "ws": "^8.18.3"
  }
}
